<?xml version="1.0" encoding="utf-8"?>

                                                                   
    
                                                                                        
           
    <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:tag="layout/flight_item_layout_0" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:tag="binding_1"       
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:text="COK"
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/booking"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@color/colorAccent"
                    android:tag="binding_2"     
                    android:id="@+id/end"
                    app:layout_constraintTop_toTopOf="@+id/start"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:text="COK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/start"
                    app:layout_constraintBottom_toBottomOf="@+id/start"
                    app:layout_constraintEnd_toStartOf="@+id/end"
                    app:layout_constraintStart_toEndOf="@+id/start"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="1dp" android:id="@+id/view"/>

            <ImageView
                    android:tint="@color/colorAccent"
                    app:layout_constraintTop_toTopOf="@+id/view"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    android:rotation="90"
                    android:src="@drawable/ic_airport_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0.49"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    />

            <TextView
                    android:textIsSelectable="true"
                    android:tag="binding_3"           
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_name"
                    android:id="@+id/start_date"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="Kochi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textIsSelectable="true"
                    android:tag="binding_4"         
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/end_name"
                    android:id="@+id/end_date"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="Kochi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@android:color/black"
                    android:tag="binding_5"           
                    android:textSize="12sp"
                    android:id="@+id/start_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start"
                    tools:text="Sat 17 Aug 2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@android:color/black"
                    android:tag="binding_6"         
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/end"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Sat 17 Aug 2019"
                    android:id="@+id/end_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@android:color/holo_orange_dark"
                    android:tag="binding_7"           
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/start_time"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/start_date"
                    tools:text="06:20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@android:color/holo_orange_dark"
                    android:tag="binding_8"         
                    app:layout_constraintTop_toBottomOf="@+id/end_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    tools:text="06:20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@color/colorAccent"
                    android:tag="binding_9"        
                    tools:text="AK 38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintBottom_toTopOf="@+id/view"/>

            <TextView
                    android:textIsSelectable="true"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/booking_tv"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:text="Booking : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@android:color/holo_green_dark"
                    android:textIsSelectable="true"
                    android:id="@+id/booking"
                    android:tag="binding_10"              
                    tools:text="BYSJBA"
                    app:layout_constraintStart_toEndOf="@+id/booking_tv"
                    app:layout_constraintTop_toTopOf="@+id/booking_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/completed"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="parent">
                <TextView
                        android:id="@+id/completed_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:text="Completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:tint="@android:color/white"
                        app:layout_constraintTop_toTopOf="@+id/completed_tv"
                        app:layout_constraintBottom_toBottomOf="@+id/completed_tv"
                        app:layout_constraintStart_toEndOf="@+id/completed_tv"
                        android:src="@drawable/ic_check_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
         
